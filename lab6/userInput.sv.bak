module userInput (clk, Reset, L, R, NL, NR, lightOn); 
	input logic clk, Reset; 
	input logic L, R, NL, NR;
	output logic lightOn;
 

	enum {on, off} ps, ns;
	


	

	// DFFs 
	always_ff @(posedge clk) begin 
		if (reset) 
			ps <= off; 
		else 
			ps <= ns; 
	end 

 

endmodule